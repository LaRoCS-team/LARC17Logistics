<launch>
<!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find nav_robotino)/maps/map.pgm 0.08"/>

<!-- Move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find nav_robotino)/config/dynamic/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find nav_robotino)/config/dynamic/costmap_common_params.yaml" command="load" ns="local_costmap" />
  </node>

<node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen">
<rosparam command="load" file="$(find world_grid)/config/world_grid.yaml" />
</node>

<!-- Launch RViz with the demo configuration -->
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find world_grid)/launch/world_grid_rviz.rviz"/>
</launch>
